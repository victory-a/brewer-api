{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single"],
    "no-console": 0,
    "no-func-assign": 1,
    "no-invalid-regexp": 1,
    "no-unreachable": 1,
    "default-case": 1,
    "no-unused-vars": 1,
    "semi": "off",
    "@typescript-eslint/semi": 0,
    "@typescript-eslint/no-misused-promises": "warn",
    "@typescript-eslint/no-var-requires": 0
  }
}
